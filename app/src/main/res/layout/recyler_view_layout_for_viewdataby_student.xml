<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal"
    android:weightSum="5">

    <TextView
        android:id="@+id/tv_subjectName_FragmentViewByStudent"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginRight="1dp"
        android:text="Sub"
        android:background="@color/colorPrimary"
        android:layout_weight="2"
        android:textColor="#fff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_Present_FragmentViewByStudent"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginRight="1dp"
        android:layout_weight="0.75"
        android:gravity="center"
        android:text="P"

        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_Absent_FragmentViewByStudent"
        android:layout_width="0dp"
        android:layout_marginRight="1dp"
        android:layout_weight="0.75"
        android:layout_height="56dp"
        android:gravity="center"

        android:background="@color/colorPrimary"
        android:text="A"
        android:textColor="#fff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_TotalClasses_FragmentViewByStudent"
        android:layout_width="0dp"
        android:layout_marginRight="1dp"
        android:layout_weight="0.75"
        android:layout_height="56dp"
        android:gravity="center"

        android:background="@color/colorPrimary"
        android:text="T"
        android:textColor="#fff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_Percentage_FragmentViewByStudent"
        android:layout_width="0dp"
        android:layout_marginRight="1dp"
        android:layout_weight="0.75"
        android:layout_height="56dp"
        android:gravity="center"

        android:background="@color/colorPrimary"
        android:text="%"
        android:textColor="#fff"
        android:textSize="16sp" />


</LinearLayout>